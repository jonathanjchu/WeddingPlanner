@model WeddingPlanner.Models.LoginUser

<form action="/login" method="POST" class="form" id="login">
    <div class="form-group">
        <span asp-validation-for="LoginEmail" class="text-danger"></span><br />
        <label asp-for="LoginEmail"></label>
        <input asp-for="LoginEmail" class="form-control" />
    </div>
    <div class="form-group">
        <span asp-validation-for="LoginPassword" class="text-danger"></span><br />
        <label asp-for="LoginPassword"></label>
        <input asp-for="LoginPassword" class="form-control" />
    </div>

    <input type="submit" value="Login" class="btn btn-dark" />
</form>