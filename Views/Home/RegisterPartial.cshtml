@model WeddingPlanner.Models.User

<form action="/register" method="POST" class="form" id="register">
    <div class="form-group">
        <span asp-validation-for="FirstName" class="text-danger"></span><br />
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" />
    </div>
    <div class="form-group">
        <span asp-validation-for="LastName" class="text-danger"></span><br />
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" />
    </div>
    <div class="form-group">
        <span asp-validation-for="Email" class="text-danger"></span><br />
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <span asp-validation-for="Password" class="text-danger"></span><br />
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" />
    </div>
    <div class="form-group">
        <span asp-validation-for="Confirm" class="text-danger"></span><br />
        <label asp-for="Confirm"></label>
        <input asp-for="Confirm" class="form-control" />
    </div>

    <input type="submit" value="Sign Up Now" class="btn btn-light" />
</form>