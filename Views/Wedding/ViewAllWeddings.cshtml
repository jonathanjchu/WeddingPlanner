@model List<WeddingPlanner.Models.Wedding>


<div class="container">
    <div class="row">
        <a href="/weddings/new" class="btn btn-primary">
            Plan New Wedding
        </a>
    </div>
    <div class="row">
        

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        Names
                    </th>
                    <th>
                        Date
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var wedding in Model)
                {
                    <tr>
                        <td>
                            <a href="/weddings/@wedding.WeddingId">
                                @wedding.WedderName1 & @wedding.WedderName2
                            </a>
                        </td>
                        <td>
                            @wedding.WeddingDate.ToString("MM/dd/yyyy")
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    
    </div>
</div>