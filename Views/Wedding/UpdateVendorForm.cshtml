@model WeddingPlanner.Models.Vendor

<div class="container">
    <div class="row">
        <form class="form" action="/weddings/@Model.WeddingId/vendors/@Model.VendorId/edit">
            <div class="form-group">
                <span asp-validation-for="VendorName" class="text-danger"></span><br />
                <label asp-for="VendorName"></label>
                <input asp-for="VendorName" class="form-control" />
            </div>
            <div class="form-group">
                <span asp-validation-for="Address" class="text-danger"></span><br />
                <label asp-for="Address"></label>
                <input asp-for="Address" class="form-control" />
            </div>

            <input type="submit" value="Save Changes" class="btn btn-dark" />
            <a href="/weddings/@Model.WeddingId" class="btn btn-light">Cancel</a>
        </form>
    </div>
</div>